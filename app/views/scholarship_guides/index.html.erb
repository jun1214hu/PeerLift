<%= render partial: 'partials/navbar2' %>

<div class="main">
<div id="filter-menu">
      <i class="fa fa-times"></i>
      <div class="container">
        <h2>Scholarships</h2>
        <form>
          <fieldset>
            <h3>Grade:</h3>
            <hr>
            <input type="radio" name="grade" value="9" id="nine"><label for="nine"><h4>9</h4></label>
            <input type="radio" name="grade" value="10" id="ten"><label for="ten"><h4>10</h4></label>
            <input type="radio" name="grade" value="11" id="eleven"><label for="eleven"><h4>11</h4></label>
            <input type="radio" name="grade" value="12" id="twelve"><label for="twelve"><h4>12</h4></label>
          </fieldset>
          <fieldset>
            <h3>Sort By:</h3>
            <hr>
            <div class="column-wrapper">
              <ul>
                <li><label for="deadline">Deadline</label></li>
              </ul>
              <ul>
                <li><input type="checkbox" name="sortDate" value="deadline" id="deadline"><label for="deadline"><i class="fa fa-check"></i></label></li>
              </ul>
            </div>
          </fieldset>
          <fieldset>
            <h3>Tags:</h3>
            <hr>
            <div class="column-wrapper">
              <ul>
                <li><label for="diversity"><span>Diversity </span></label></li>
              <li><label for="low-income"><span>Low-Income </span></label></li>
              <li><label for="service"><span>Service </span></label></li>
                <li><label for="stem">STEM</label></li>
        <li><label for="daca"><span>DACA </span></label></li>
              </ul>
              <ul>
                <li><input type="checkbox" name="tags[]" value="diversity" id="diversity"><label for="diversity"><i class="fa fa-check"></i></label></li>
                <li><input type="checkbox" name="tags[]" value="low-income" id="low-income"><label for="low-income"><i class="fa fa-check"></i></label></li>
              <li><input type="checkbox" name="tags[]" value="service" id="service"><label for="service"><i class="fa fa-check"></i></label></li>
              <li><input type="checkbox" name="tags[]" value="stem" id="stem"><label for="stem"><i class="fa fa-check"></i></label></li>
        <li><input type="checkbox" name="tags[]" value="daca" id="daca"><label for="daca"><i class="fa fa-check"></i></label></li>
              </ul>
            </div>
          </fieldset>
          <input type="button" name="SubmitButton" value="Submit">
        </form>
      </div>
    </div>
  </div>

<div class="main">

<div class="opportunity-alt">

    <% @unsaved_scholarships.each do |scholarship_guide| %>

<div class="container">

  <h1 class="scholarship_title" href="?">  <%= scholarship_guide.program_name %> </h1><i class="fa fa-plus-circle addDesktop" id="USAirForceROTC" style="display: inline;"></i>
  <div class="flex-container">
    <div class="grade">
      <h3> <%= scholarship_guide.metric_box1 %></h3>
    </div>
    <div class="selectivity">
      <h3><%= scholarship_guide.metric_box2 %></h3>
    </div>
    <div class="deadline">
      <h3><%= scholarship_guide.metric_box3 %></h3>
    </div><input type="hidden" class="metricDate" value="2017-12-01"></div>
    <div class="info">
      <p<%= scholarship_guide.description_long %></p>
      <h3>See More</h3>
      <h3>See Less</h3>
    </div>
    <br>
    <div class="applynow">
    <h2>
      <a class="applyLink" href="/scholarship_guides/<%= scholarship_guide.id %>" target="_blank">Read More<i class="fa fa-chevron-circle-right"></i></a></h2></div>
          <hr>
    </div>


<% end %>

    </div>
  </div>





  <table class="table table-hover col-md-6 offset-md-3">
  <thead>
    <tr>
      <<th>Program name</th>
      <th>Metric box1</th>
      <th>Description short</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @saved_scholarships.each do |scholarship_guide| %>
      <tr>
        <td><a href="/scholarship_guides/<%= scholarship_guide.id %>"><%= scholarship_guide.program_name %></a></td>
        <td><%= scholarship_guide.metric_box1 %></td>
        <td><%= scholarship_guide.description_short %></td>
        <td><%= link_to 'Show', scholarship_guide %></td>
        <td><%= link_to 'Edit', edit_scholarship_guide_path(scholarship_guide) %></td>
        <% if current_user %>
          <% if current_user.attributes.slice('is_admin')["is_admin"] == 1 %>
              <td><%= link_to 'Edit', edit_scholarship_guide_path(scholarship_guide) %></td>
              <td><%= link_to 'Destroy', scholarship_guide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>              
        <td><%= button_to 'Unsave 2 from my Profile', unsave_scholarship_path(user_id: current_user.id, scholarship_guide_id: scholarship_guide.id, scholarship_name: scholarship_guide.program_name), method: :delete %></td>
      </tr>
    <% end %>
    <% @unsaved_scholarships.each do |scholarship_guide| %>
      <tr>
        <td><a href="/scholarship_guides/<%= scholarship_guide.id %>"><%= scholarship_guide.program_name %></a></td>
        <td><%= scholarship_guide.metric_box1 %></td>
        <td><%= scholarship_guide.description_short %></td>
        <td><%= link_to 'Show', scholarship_guide %></td>
        <td><%= link_to 'Edit', edit_scholarship_guide_path(scholarship_guide) %></td>
        <% if current_user %>
          <% if current_user.attributes.slice('is_admin')["is_admin"] == 1 %>
              <td><%= link_to 'Edit', edit_scholarship_guide_path(scholarship_guide) %></td>
              <td><%= link_to 'Destroy', scholarship_guide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
        <td><%= button_to 'Save to my Profile', save_scholarship_path(user_id: current_user.id, scholarship_guide_id: scholarship_guide.id, scholarship_name: scholarship_guide.program_name, completed: 0) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
